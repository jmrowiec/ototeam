.page-header
  = link_to new_event_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Event
  %h1 Listing events

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr

        %th Name

        %th Start

        %th Desc

        %th Invfrom

        %th Invto

        %th Limitfrom

        %th Limitto

        %th Answertime

        %th Showppls

        %th
        %th
        %th

    %tbody
      - @events.each do |event|
        %tr

          %td= event.name

          %td= event.start

          %td= event.desc

          %td= event.invFrom

          %td= event.invTo

          %td= event.limitFrom

          %td= event.limitTo

          %td= event.answerTime

          %td= event.showPpls

          %td= link_to 'Show', event
          %td= link_to 'Edit', edit_event_path(event)
          %td= link_to 'Destroy', event, :data => { confirm: 'Are you sure?' }, :method => :delete
      %div= paginate @events
      %div
        = search_form_for @q do |f|
          = #f.label :name_cont
          = f.label "Name contains: "
          = f.text_field :name_cont
          = f.label "Desc contains: "
          = f.text_field :desc_cont
          = f.label "Date greater than: "
          = f.datetime_select :start_gt
          = f.submit