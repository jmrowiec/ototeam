= form_for @event, :html => { :class => "form-horizontal" } do |f|
  -if @event.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"

      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg


  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control'

  .form-group
    = f.label :start, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :start, :class => 'form-control'

  .form-group
    = f.label :desc, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :desc, :class => 'form-control'

  .form-group
    = f.label :invFrom, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invFrom, :class => 'form-control'

  .form-group
    = f.label :invTo, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invTo, :class => 'form-control'

  .form-group
    = f.label :limitFrom, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :limitFrom, :class => 'form-control'

  .form-group
    = f.label :limitTo, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :limitTo, :class => 'form-control'

  .form-group
    = f.label :answerTime, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :answerTime, :class => 'form-control'

  .form-group
    = f.label :showPpls, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.check_box :showPpls, :class => 'form-control'

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
